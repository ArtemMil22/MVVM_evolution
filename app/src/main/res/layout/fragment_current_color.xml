<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/colorContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@android:color/black"
        android:padding="2dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/changeColorButton">

        <View
            android:id="@+id/colorView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="#0088ff"/>

    </FrameLayout>

    <Button
        android:id="@+id/changeColorButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/change_color"
        app:layout_constraintStart_toStartOf="@id/colorContainer"
        app:layout_constraintEnd_toEndOf="@id/colorContainer"
        app:layout_constraintTop_toBottomOf="@id/colorContainer"
        app:layout_constraintBottom_toTopOf="@id/askPermissionsButton"/>

    <Button
        android:id="@+id/askPermissionsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/request_permissions"
        app:layout_constraintStart_toStartOf="@id/colorContainer"
        app:layout_constraintEnd_toEndOf="@id/colorContainer"
        app:layout_constraintTop_toBottomOf="@id/changeColorButton"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <include layout="@layout/part_result" />

</androidx.constraintlayout.widget.ConstraintLayout>